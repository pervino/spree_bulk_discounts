<% content_for :page_title do %>
    New Bulk Discount
<% end %>

<% content_for :page_actions do %>
    <%= button_link_to Spree.t(:new_bulk_discount), new_object_url, { :class => "btn-success", :icon => 'add', :id => 'admin_new_product' } %>
    <%= button_link_to "New Breakpoint", 'javascript:void(0);', {:icon => 'icon-arrow-plus' ,id: 'add-new-breakpoint' } %>

<% end if can?(:create, Spree::BulkDiscount) %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @bulk_discount } %>

<%= form_for [:admin, @bulk_discount] do |f| %>
    <fieldset class="no-border-top">
      <%= render :partial => 'form', :locals => { :f => f } %>
      <div class="clear"></div>
      <%= render :partial => 'spree/admin/shared/new_resource_links' %>
    </fieldset>
<% end %>